 * var connection = new http.Connection('http://pastebin.com/raw/');
 * connection.addHeader({name: â€˜Content-Typeâ€™, value: â€˜text/plainâ€™});
 * var response = connection.getSync(pasteBinKey, '');
 * if (response && response.code === 200) {
